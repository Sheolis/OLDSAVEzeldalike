function MasquerColonne_tabSM(){
	var i = 0;
	var rows = document.getElementById('tabSM').rows;
	while(rows[i])   {
		var style = rows[i].cells[0].style;
		style.display = "none";
		i++;   }
	var tab = document.getElementById('tabSM');
	tab.style.width="250"}

